<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:background="?attr/appBgColor"
    tools:context=".view.SignUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/app_logo"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="ACİL YARDIM"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="?attr/redColor"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Kullanıcı Adı"
            android:textSize="17sp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:inputType="textPersonName"
            android:layout_marginEnd="45dp"
            android:id="@+id/sign_up_fragment_editUserName"
            android:layout_marginStart="45dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/edit_bg"
            android:textColor="?attr/editTxtColor"
            android:textColorHint="?attr/editTxtColor"
            android:layout_height="50dp"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Email adresi"
            android:textSize="17sp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:inputType="textEmailAddress"
            android:layout_marginEnd="45dp"
            android:id="@+id/sign_up_fragment_editEmail"
            android:layout_marginStart="45dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edit_bg"
            android:textColor="?attr/editTxtColor"
            android:textColorHint="?attr/editTxtColor"
            android:layout_height="50dp"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Şifre"
            android:textSize="17sp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:inputType="textPassword"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="25dp"
            android:id="@+id/sign_up_fragment_editPassword"
            android:layout_marginStart="45dp"
            android:background="@drawable/edit_bg"
            android:textColor="?attr/editTxtColor"
            android:textColorHint="?attr/editTxtColor"
            android:layout_height="50dp"/>

        <Button
            android:layout_width="225dp"
            android:text="Kayıt Ol"
            android:textAllCaps="false"
            android:id="@+id/sign_up_fragment_btnSignUp"
            android:textSize="19sp"
            android:layout_marginTop="65dp"
            android:background="@drawable/yellow_btn_bg"
            android:textColor="?attr/whiteColor"
            android:layout_height="60dp"
            app:backgroundTint="@null"/>

        <Button
            android:layout_width="150dp"
            android:text="Giriş Yap"
            android:textAllCaps="false"
            android:id="@+id/sign_up_fragment_btnSignIn"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/red_btn_bg"
            android:textColor="?attr/whiteColor"
            android:layout_height="50dp"
            app:backgroundTint="@null"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>